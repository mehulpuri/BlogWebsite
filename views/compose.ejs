<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="post" autocomplete="off">

  <div class="form-group">
    <label for="title">Title</label>
    <input name="postTitle" type="text" class="form-control" id="title" placeholder="Your Title goes here" required>
  </div><br>

  <div class="form-group">
    <label for="textBox">Post</label>
    <textarea style="resize:none;" name="postBody" class="form-control" id="textBox" rows="5" cols="30" required></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Publish</button>

</form>

<%- include('partials/footer'); -%>
